@model DSLNG.PEAR.Web.ViewModels.Operation.OperationViewModel

@{
    ViewBag.Title = "Edit";
    
}
<div class="operation-config-save">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12">
            <div class="title">Key Operation</div>
            <div class="description_year">Edit</div>
            <div>@Html.ValidationSummary(true)</div>
            @Html.HiddenFor(x => x.Id)
        </div>
        <div class="col-md-12">
            <div class="form-inline whitebox">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.KeyOperationGroupId)
                    @Html.DropDownListFor(model => model.KeyOperationGroupId, Model.KeyOperationGroups, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KeyOperationGroupId)
                </div>
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.KpiId)
                    @Html.DropDownListFor(model => model.KpiId, new List<SelectListItem>() { new SelectListItem { Value = Model.Kpis[0].Id.ToString(), Text = Model.Kpis[0].Name } }, "Select KPI", new { @class = "form-control", data_url = Url.Action("EconomicKpis", "OutputConfig"), style = "width:200px" })
                    @Html.ValidationMessageFor(model => model.Kpis[0].Id)
                </div>
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.Order)
                    @Html.TextBoxFor(model => model.Order, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Order)
                </div>
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.Desc)
                    @Html.TextAreaFor(model => model.Desc, 5, 100, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Desc)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "control-label" })
                    @Html.EditorFor(model => model.IsActive, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
            </div>
        </div>
        <div class="col-md-12 artifact-designer-btns">
            <button type="submit" class="btn btn-primary btn-lg"><span class="fa fa-floppy-o"></span>Save</button>
            <a onclick="location.reload();" class="btn btn-primary btn-lg"><span class="fa fa-repeat"></span>Clear</a>
            <a href="@Url.Action("Index")" class="btn btn-primary btn-lg"><span class="fa fa-times"></span>Cancel</a>
        </div>
    }
</div>


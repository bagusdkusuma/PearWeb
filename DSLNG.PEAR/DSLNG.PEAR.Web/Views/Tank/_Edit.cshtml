@model DSLNG.PEAR.Web.ViewModels.Artifact.ArtifactDesignerViewModel
@Html.HiddenFor(x=> x.Tank.Id)
<div class="form-group form-list">
    @Html.LabelFor(model => model.Tank.MinCapacity)
    @Html.TextBoxFor(model => model.Tank.MinCapacity, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Tank.MinCapacity)
</div>
<div class="form-group form-list">
    @Html.LabelFor(model => model.Tank.MaxCapacity)
    @Html.TextBoxFor(model => model.Tank.MaxCapacity, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Tank.MaxCapacity)
</div>
<div class="form-group form-list">
    @Html.LabelFor(model => model.Tank.DaysToTankTopTitle)
    @Html.TextBoxFor(model => model.Tank.DaysToTankTopTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Tank.DaysToTankTopTitle)
</div>
<div class="form-group form-list">
    @Html.LabelFor(model => model.Tank.DaysToTankTopId)
    @Html.DropDownListFor(model => model.Tank.DaysToTankTopId, new List<SelectListItem>(){ new SelectListItem { Value = Model.Tank.DaysToTankTopId.ToString(), Text = Model.Tank.DaysToTankTop.ToString() } }, new { @class = "kpi-list  form-control", style = "width:180px" })
    @Html.ValidationMessageFor(model => model.Tank.DaysToTankTopId)
</div>
<div class="form-group form-list">
    @Html.LabelFor(model => model.Tank.VolumeInventoryId)
    @Html.DropDownListFor(model => model.Tank.VolumeInventoryId, new List<SelectListItem>() { new SelectListItem { Value = Model.Tank.VolumeInventoryId.ToString(), Text = Model.Tank.VolumeInventory.ToString() } }, new { @class = "kpi-list  form-control", style = "width:180px" })
    @Html.ValidationMessageFor(model => model.Tank.VolumeInventoryId)
</div>
<div class="form-group form-list">
    @Html.LabelFor(model => model.Tank.Color)
    <div class="input-group colorpicker">
        @Html.TextBoxFor(model => model.Tank.Color, new { @class = "form-control" })
        <span class="input-group-addon" style="background-color: @Model.Tank.Color"><i></i></span>
    </div>
    @Html.ValidationMessageFor(model => model.Tank.Color)
</div>
<div class="form-group form-list">
    @Html.LabelFor(model => model.Tank.ShowLine)
    @Html.EditorFor(model => model.Tank.ShowLine)
    @Html.ValidationMessageFor(model => model.Tank.ShowLine)
</div>
                @Html.DisplayPlantAvailablityIndicator(Model.KpiInformationViewModels.Single(x => x.Position == 0), Model.KpiInformationViewModels.Single(x => x.Position == 11),"asof")
                @Html.DisplayCompleteDerValueForPlantAvailability(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Value)
                

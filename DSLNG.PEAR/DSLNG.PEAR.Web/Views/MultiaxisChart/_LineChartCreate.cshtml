@model DSLNG.PEAR.Web.ViewModels.Artifact.ArtifactDesignerViewModel

<div class="form-group form-list">
    <label>Series</label>
    <input type="button" value="Add Series" class="btn btn-lightblue" id="add-series" />
</div>

<div class="hidden-fields">
    <div class="series-template original whitebox">
        <h2>Series</h2>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Label)
                    @Html.TextBoxFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Label, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Label)
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Color)
                    <div class="input-group colorpicker">
                        @Html.TextBoxFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Color, new { @class = "form-control" })
                        <span class="input-group-addon"><i></i></span>
                    </div>
                    @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Color)
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].KpiId)
                    @Html.DropDownListFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].KpiId, new List<SelectListItem>(), new { @class = "kpi-list form-control", style = "width:180px" })
                    @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].KpiId)
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group value-axis form-list">
                    @Html.LabelFor(model => Model.MultiaxisChart.Charts[0].LineChart.Series[0].ValueAxis)
                    @Html.DropDownListFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].ValueAxis, Model.MultiaxisChart.Charts[0].LineChart.ValueAxes, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].ValueAxis)
                </div>
            </div>
            
            @if (!Request.UrlReferrer.ToString().ToLowerInvariant().Contains("layoutitem"))
            {
                <div class="col-sm-6">
                    <div class="form-group form-list as">
                        @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].LineType)
                        @Html.DropDownListFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].LineType, Model.MultiaxisChart.Charts[0].LineChart.LineTypes, new { @class = " form-control", style = "width:180px" })
                        @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].KpiId)
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-list as">
                        @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].MarkerColor)
                        <div class="input-group colorpicker">
                            @Html.TextBoxFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].MarkerColor, new { @class = "form-control" })
                            <span class="input-group-addon"><i></i></span>
                        </div>
                        @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].MarkerColor)
                    </div>
                </div>
            }

        </div>
        <input type="button" value="Remove" class="remove" />
    </div>

</div>
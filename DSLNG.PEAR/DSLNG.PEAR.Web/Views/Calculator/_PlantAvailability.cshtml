@model DSLNG.PEAR.Web.ViewModels.Calculator.PlantAvailabilityCalculatorViewModel
@{
    ViewBag.Title = "_Pricing";
}
<div class="row calculator">
    <div class="col-md-12">
        <h3>Plant Availability</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-1 text-left">
            <label class="control-label">Year</label>
        </div>
        <div class="col-md-3" style="padding-left: 0;">
            @*@Html.TextBoxFor(model => model.Year, new { @class = "form-control datepicker" })*@
            <input class="datepicker" name="Year" id="Year"/>
        </div>
        <div class="col-md-2 text-left">
            <label class="control-label">Plant Available </label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.PlantAvailable, new { @class = "form-control" })
            
        </div>
        <div class="col-md-3 text-left">
            @Html.DropDownListFor(model => model.Unit, Model.Units, new { id = "pa-unit" })
        </div>
    </div>
    <div class="col-md-12" style="margin-top: 20px;">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-1 control-label" style="text-align: left">Result</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(model => model.PlantAvailability, new { id = "plantAvailabilityDays", @class = "form-control text-align-right" })
                </div>
                <div class="col-sm-3" style="padding: 0;text-align: left;">
                    <label class="control-label" style="text-align: left">Plant Availability (days)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-md-offset-1">
                    @Html.TextBoxFor(model => model.ShutDown, new { id = "shutDownDays", @class = "form-control text-align-right" })
                </div>
                <div class="col-sm-3" style="padding: 0;text-align: left;">
                    <label class="control-label" style="text-align: left">Shutdown (days)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-md-offset-1">
                    @Html.TextBoxFor(model => model.PlantAvailability, new { id = "plantAvailabilityPercent", @class = "form-control text-align-right" })
                </div>
                <div class="col-sm-3" style="padding: 0;text-align: left;">
                    <label class="control-label" style="text-align: left">Plant Availability (%)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-md-offset-1">
                    @Html.TextBoxFor(model => model.ShutDown, new { id = "shutDownPercent", @class = "form-control text-align-right" })
                </div>
                <div class="col-sm-3" style="padding: 0;text-align: left;">
                    <label class="control-label" style="text-align: left">Shutdown (%)</label>
                </div>
            </div>
        </form>
    </div>
</div>
